{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "@typescript-eslint",
        "prettier",
        "jest"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "prettier"
    ],
    "rules": {
        "no-console": [
            "error",
            {
                "allow": [
                    "log",
                    "warn",
                    "error"
                ]
            }
        ],
        "prettier/prettier": 2
    },
    "env": {
        "browser": true,
        "node": true,
        "jest/globals": true
    }
}
